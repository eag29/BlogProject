@model Blog

<div class="mainbar">
    <div class="article">
        <h2><span>@Model.Name</span></h2>
        <div class="clr"></div>
        
        <p>@Model.Description </p>
        <p>Etiketler: <a href="#">@Model.Tags</a></p>
        <p>
            <a href="#"><strong>Comments (@Model.CommentCount)</strong></a> <span>&nbsp;&bull;&nbsp;</span> @Model.PublishDate.ToString("MMMM d\\t\\h, yyyy 'at' h:mm tt") <span>&nbsp;&bull;&nbsp;</span>
        </p>
    </div>
    <div class="article">
        <h2><span>Yorumlar</span></h2>
        <div class="clr"></div>
        @foreach (var item in ViewBag.Comment)
        {
            <div class="comment">
                <a href="#"><img src="/images/userpic.gif" width="40" height="40" alt="" class="userpic" /></a>
                <p>
                    <a href="#">@item.Author</a> :<br />
                    @item.PublishDate.ToString("MMMM d\\t\\h, yyyy 'at' h:mm tt")
                </p>
                <p>@item.Message</p>
            </div>
        }

    </div>
    <div class="article">
        <h2><span>Yorum</span> Yapın</h2>
        <div class="clr"></div>
        <form action="/Blog/CreateComment" method="post" id="leavereply">
            <ol>
                <input id="blogid" name="BlogID" type="hidden" value="@Model.ID" />
                <li>
                    <label for="Author">İsim (Zorunlu)</label>
                    <input id="Author" name="Author" class="text" required />
                </li>
                <li>
                    <label for="Email">Email Adresi (Zorunlu)</label>
                    <input id="Email" name="Email" class="text" required />
                </li>
                <li>
                    <label for="Message">Mesaj (Zorunlu)</label>
                    <textarea id="Message" name="Message" rows="8" cols="50" required></textarea>
                </li>
                <li>
                    <input type="image" name="imageField" id="imageField" src="/images/submit.gif" class="send" />
                    <div class="clr"></div>
                </li>
            </ol>
        </form>
    </div>
</div>